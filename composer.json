{
    "name"             : "yoeunes/toastr",
    "license"          : "MIT",
    "description"      : "Easy toastr notifications for Laravel 5",
    "homepage"         : "https://github.com/yoeunes/toastr",
    "keywords"         : [
        "toastr",
        "notification",
        "laravel",
        "laravel 5",
        "php"
    ],
    "authors"          : [
        {
            "name"    : "Younes Khoubza",
            "email"   : "younes.khoubza@gmail.com",
            "homepage": "https://dalilbook.com",
            "role"    : "Developer"
        }
    ],
    "require"          : {
        "php"               : ">=7.0.0",
        "illuminate/support": "^5.5",
        "illuminate/session": "^5.5"
    },
    "require-dev"      : {
        "phpunit/phpunit"    : "^6.5",
        "orchestra/testbench": "^3.5"
    },
    "autoload"         : {
        "psr-4": {
            "Yoeunes\\Toastr\\": "src"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "autoload-dev"     : {
        "psr-4": {
            "Yoeunes\\Toastr\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable"    : true,
    "extra"            : {
        "laravel": {
            "providers": [
                "Yoeunes\\Toastr\\ToastrServiceProvider"
            ]
        }
    },
    "config"           : {
        "sort-packages": true
    }
}
